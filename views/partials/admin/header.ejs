<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>PC Monarch Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="/admin-assets/img/favicon.ico">
    <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css">
    <script src="https://kit.fontawesome.com/16d4885483.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>
        :root {
            --primary-color: #1a237e;
            --secondary-color: #283593;
            --accent-color: #3949ab;
            --text-color: #ffffff;
            --hover-color: #5c6bc0;
        }

        body {
            background-color: #f0f2f5;
            font-family: 'Roboto', sans-serif;
        }

        .navbar {
            background-color: var(--primary-color);
        }

        .navbar-aside {
            background-color: var(--secondary-color);
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        .menu-item a.menu-link {
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .menu-item a.menu-link:hover,
        .menu-item a.menu-link.active {
            background-color: var(--accent-color);
            color: var(--text-color);
        }

        .dropdown-menu {
            background-color: var(--secondary-color);
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item {
            color: var(--text-color);
        }

        .dropdown-item:hover {
            background-color: var(--hover-color);
            color: var(--text-color);
        }

        .brand-wrap .logo {
            max-height: 50px;
        }

        .btn-icon {
            color: var(--text-color);
        }

        .main-header {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .menu-aside .menu-item .icon {
            color: var(--text-color);
        }

        .img-xs {
            width: 40px;
            height: 40px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="/admin" class="brand-wrap">
                <img src="/admin-assets/imgs/pc-logo.png" class="logo" alt="PC Monarch Dashboard">
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"> 
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <% const menuItems = [
                    { link: '/admin', icon: 'fas fa-home', text: 'Dashboard' },
                    { link: '/admin/users', icon: 'fas fa-users', text: 'Customers' },
                    { link: '/admin/category', icon: 'fas fa-list', text: 'Category' },
                    { link: '/admin/addProducts', icon: 'fas fa-plus-square', text: 'Add product' },
                    { link: '/admin/products', icon: 'fas fa-box', text: 'Products' },
                    { link: '/admin/orders', icon: 'fas fa-image', text: 'Orders' },
                    { link: '/admin/banner', icon: 'fas fa-image', text: 'Banner' },
                    
                ]; %>
                
                <% menuItems.forEach(item => { %>
                    <li class="menu-item">
                        <a class="menu-link" href="<%= item.link %>">
                            <i class="icon <%= item.icon %>"></i>
                            <span class="text"><%= item.text %></span>
                        </a>
                    </li>
                <% }); %>
            </ul>
        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                <!-- Add search functionality if needed -->
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> 
                    <i class="fas fa-bars"></i>
                </button>
                <ul class="nav">
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false"> 
                            <img class="img-xs rounded-circle" src="https://avatars.githubusercontent.com/u/77664311?s=96&v=4" alt="User">
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                            <a class="dropdown-item text-secondary" href="/admin/profile">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                  </svg> Profile
                            </a>
                            <a class="dropdown-item text-danger" href="#" onclick="confirmAdminLogout(event)">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function confirmAdminLogout(event) {
    event.preventDefault();
    Swal.fire({
      title: "Are you sure?",
      text: "You will be logged out of the admin panel!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#d33",
      cancelButtonColor: "#3085d6",
      confirmButtonText: "Yes, Logout!",
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/admin/logout";
      }
    });
  }
</script>