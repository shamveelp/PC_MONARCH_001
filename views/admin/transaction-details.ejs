<%- include("../../views/partials/admin/header") %>


<div class="container-fluid px-4">
    <h1 class="mt-4">Transaction Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/admin/transactions">Transactions</a></li>
        <li class="breadcrumb-item active">Transaction Details</li>
    </ol>
    
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Transaction Information
                </div>
                <div class="card-body">
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Transaction ID:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext"><%= transaction.transactionId %></p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Amount:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext <%= transaction.transactionType === 'credit' ? 'text-success' : 'text-danger' %>">
                                <%= transaction.transactionType === 'credit' ? '+' : '-' %>₹<%= transaction.amount.toFixed(2) %>
                            </p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Transaction Type:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">
                                <span class="badge <%= transaction.transactionType === 'credit' ? 'bg-success' : 'bg-danger' %>">
                                    <%= transaction.transactionType %>
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Payment Method:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext"><%= transaction.paymentMethod %></p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Payment Gateway:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext"><%= transaction.paymentGateway %></p>
                        </div>
                    </div>
                    <% if (transaction.gatewayTransactionId) { %>
                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label fw-bold">Gateway Transaction ID:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext"><%= transaction.gatewayTransactionId %></p>
                            </div>
                        </div>
                    <% } %>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Purpose:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext"><%= transaction.purpose %></p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Description:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext"><%= transaction.description || 'N/A' %></p>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Status:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">
                                <span class="badge 
                                    <%= transaction.status === 'completed' ? 'bg-success' : 
                                       transaction.status === 'pending' ? 'bg-warning' : 
                                       transaction.status === 'failed' ? 'bg-danger' : 
                                       'bg-info' %>">
                                    <%= transaction.status %>
                                </span>
                            </p>
                        </div>
                    </div>
                    <% if (transaction.walletBalanceAfter !== null) { %>
                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label fw-bold">Wallet Balance After:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext">₹<%= transaction.walletBalanceAfter.toFixed(2) %></p>
                            </div>
                        </div>
                    <% } %>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">Created At:</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext"><%= new Date(transaction.createdAt).toLocaleString() %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user me-1"></i>
                    User Information
                </div>
                <div class="card-body">
                    <% if (transaction.userId) { %>
                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label fw-bold">User ID:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext"><%= transaction.userId._id %></p>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label fw-bold">Name:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext"><%= transaction.userId.name %></p>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label fw-bold">Email:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext"><%= transaction.userId.email %></p>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label fw-bold">Phone:</label>
                            <div class="col-sm-8">
                                <p class="form-control-plaintext"><%= transaction.userId.phone || 'N/A' %></p>
                            </div>
                        </div>
                        <div class="mb-3">
                            <a href="/admin/users/<%= transaction.userId._id %>" class="btn btn-primary">
                                <i class="fas fa-user"></i> View User Profile
                            </a>
                        </div>
                    <% } else { %>
                        <p class="text-center">User information not available</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <% if (transaction.orders && transaction.orders.length > 0) { %>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-shopping-cart me-1"></i>
                Related Orders
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Payment Method</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transaction.orders.forEach(order => { %>
                                <tr>
                                    <td><%= order.orderId %></td>
                                    <td>₹<%= order.amount.toFixed(2) %></td>
                                    <td>
                                        <% if (order.orderDetails) { %>
                                            <span class="badge 
                                                <%= order.orderDetails.status === 'delivered' ? 'bg-success' : 
                                                   order.orderDetails.status === 'pending' ? 'bg-warning' : 
                                                   order.orderDetails.status === 'cancelled' ? 'bg-danger' : 
                                                   'bg-info' %>">
                                                <%= order.orderDetails.status %>
                                            </span>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (order.orderDetails) { %>
                                            <%= order.orderDetails.paymentMethod %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (order.orderDetails) { %>
                                            <%= new Date(order.orderDetails.createdOn).toLocaleString() %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (order.orderDetails) { %>
                                            <a href="/admin/orders/<%= order.orderId %>" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> View Order
                                            </a>
                                        <% } else { %>
                                            <span class="text-muted">Order not found</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <% } %>
    
    <% if (transaction.metadata && Object.keys(transaction.metadata).length > 0) { %>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-code me-1"></i>
                Additional Metadata
            </div>
            <div class="card-body">
                <pre class="bg-light p-3 rounded"><%= JSON.stringify(transaction.metadata, null, 2) %></pre>
            </div>
        </div>
    <% } %>
    
    <div class="mb-4">
        <a href="/admin/transactions" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Transactions
        </a>
    </div>
</div>



<%- include("../../views/partials/admin/footer") %>