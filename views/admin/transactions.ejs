<style>
   :root {
      --primary-color: #1e90ff;
      --secondary-color: #2d3436;
      --success-color: #00b894;
      --danger-color: #d63031;
      --info-color: #0984e3;
      --light-gray: #dfe6e9;
      --background-color: #f5f6fa;
      --white: #ffffff;
      --shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
      --transition: all 0.3s ease;
    }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: var(--light-gray);
    color: var(--secondary-color);
  }

  .container-fluid {
    padding: 40px 20px;
    max-width: 1400px;
    margin: 0 auto;
  }

  h1.mt-4 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--secondary-color);
    margin-bottom: 20px;
  }

  .breadcrumb {
    background: transparent;
    padding: 0;
    margin-bottom: 30px;
  }

  .breadcrumb-item a {
    color: var(--primary-color);
    text-decoration: none;
  }

  .breadcrumb-item.active {
    color: var(--secondary-color);
  }

  .card {
    background: var(--white);
    border-radius: 12px;
    box-shadow: var(--shadow);
    margin-bottom: 30px;
  }

  .card-header {
    background: var(--primary-color);
    color: var(--white);
    padding: 15px 20px;
    border-radius: 12px 12px 0 0;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .card-body {
    padding: 30px;
  }

  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .col-md-3 {
    flex: 1;
    min-width: 250px;
  }

  .form-label {
    font-weight: 500;
    margin-bottom: 8px;
    color: var(--secondary-color);
  }

  .form-select,
  .form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  .form-select:focus,
  .form-control:focus {
    border-color: var(--primary-color);
    outline: none;
    box-shadow: 0 0 5px rgba(74, 144, 226, 0.3);
  }

  .btn-primary {
    background-color: var(--primary-color);
    color: var(--white);
    border: none;
    padding: 12px 20px;
    border-radius: 8px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #357abd;
  }

  .btn-secondary {
    background-color: #a0aec0;
    color: var(--white);
    border: none;
    padding: 12px 20px;
    border-radius: 8px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .btn-secondary:hover {
    background-color: #718096;
  }

  /* Transaction Card Styles */
  .transaction-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .transaction-card {
    background: var(--white);
    border-radius: 12px;
    box-shadow: var(--shadow);
    padding: 20px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .transaction-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .transaction-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 10px;
    color: var(--primary-color);
  }

  .transaction-card p {
    margin: 8px 0;
    font-size: 0.95rem;
    color: var(--secondary-color);
  }

  .transaction-card .amount {
    font-weight: 600;
  }

  .transaction-card .amount.credit {
    color: var(--success-color);
  }

  .transaction-card .amount.debit {
    color: var(--danger-color);
  }

  .transaction-card .badge {
    padding: 6px 12px;
    border-radius: 12px;
    font-size: 0.875rem;
    color: var(--white);
  }

  .transaction-card .bg-success {
    background-color: var(--success-color);
  }

  .transaction-card .bg-danger {
    background-color: var(--danger-color);
  }

  .transaction-card .orders {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
  }

  .transaction-card .badge.bg-info {
    background-color: var(--primary-color);
    text-decoration: none;
  }

  .transaction-card .badge.bg-secondary {
    background-color: #a0aec0;
  }

  .transaction-card .actions {
    margin-top: 15px;
    display: flex;
    justify-content: flex-end;
  }

  .btn-sm {
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 0.875rem;
    text-decoration: none;
  }

  .btn-primary.btn-sm {
    background-color: var(--primary-color);
    color: var(--white);
  }

  .btn-primary.btn-sm:hover {
    background-color: #357abd;
  }

  .pagination {
    margin-top: 20px;
  }

  .page-link {
    color: var(--primary-color);
    border-radius: 6px;
    padding: 8px 12px;
    transition: background-color 0.3s ease;
  }

  .page-item.active .page-link {
    background-color: var(--primary-color);
    color: var(--white);
    border-color: var(--primary-color);
  }

  .page-item.disabled .page-link {
    color: #a0aec0;
  }

  .page-link:hover {
    background-color: #edf2f7;
  }

  @media (max-width: 768px) {
    .col-md-3 {
      min-width: 100%;
    }
    .transaction-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="container-fluid px-4">
  <h1 class="mt-4">Transactions</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
    <li class="active"> > Transactions</li>
  </ol>

  <div class="card mb-4">
    <div class="card-header">
      <i class="fas fa-filter me-1"></i>
      Filter Transactions
    </div>
    <div class="card-body">
      <form id="filterForm" method="GET" action="/admin/transactions">
        <div class="row">
          <div class="col-md-3 mb-3">
            <label for="transactionType" class="form-label">Transaction Type</label>
            <select class="form-select" id="transactionType" name="transactionType">
              <option value="">All</option>
              <option value="credit">Credit</option>
              <option value="debit">Debit</option>
            </select>
          </div>
          <div class="col-md-3 mb-3">
            <label for="paymentMethod" class="form-label">Payment Method</label>
            <select class="form-select" id="paymentMethod" name="paymentMethod">
              <option value="">All</option>
              <option value="wallet">Wallet</option>
              <option value="online">Online</option>
              <option value="refund">Refund</option>
              <option value="admin">Admin</option>
            </select>
          </div>
          <div class="col-md-3 mb-3">
            <label for="purpose" class="form-label">Purpose</label>
            <select class="form-select" id="purpose" name="purpose">
              <option value="">All</option>
              <option value="purchase">Purchase</option>
              <option value="refund">Refund</option>
              <option value="wallet_add">Wallet Add</option>
              <option value="wallet_withdraw">Wallet Withdraw</option>
              <option value="cancellation">Cancellation</option>
              <option value="return">Return</option>
            </select>
          </div>
          <div class="col-md-3 mb-3">
            <label for="orderId" class="form-label">Order ID</label>
            <input type="text" class="form-control" id="orderId" name="orderId" placeholder="Enter Order ID">
          </div>
        </div>
        <div class="row">
          <div class="col-md-3 mb-3">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" id="startDate" name="startDate">
          </div>
          <div class="col-md-3 mb-3">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate" name="endDate">
          </div>
          <div class="col-md-3 mb-3">
            <label for="userId" class="form-label">User Email</label>
            <select class="form-control" id="userId" name="userId">
              <option value="">Select a user</option>
              <% users.forEach(user => { %>
                <option value="<%= user.email %>" <%= query.userId === user.email ? 'selected' : '' %>>
                  <%= user.email %>
                </option>
              <% }) %>
            </select>
          </div>
          <div class="col-md-3 mb-3 d-flex align-items-end gap-2">
            <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
            <button type="button" class="btn btn-secondary" onclick="resetFilters()">Reset</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <i class="fas fa-table me-1"></i>
      Transactions List
    </div>
    <div class="card-body">
      <div class="transaction-grid">
        <% if (transactions && transactions.length > 0) { %>
          <% transactions.forEach(transaction => { %>
            <div class="transaction-card">
              <h3><%= transaction.transactionId %></h3>
              <p><strong>User:</strong> 
                <% if (transaction.userId) { %>
                  <%= transaction.userId.name %> (<%= transaction.userId.email %>)
                <% } else { %>
                  Unknown User
                <% } %>
              </p>
              <p><strong>Amount:</strong> 
                <span class="amount <%= transaction.transactionType === 'credit' ? 'credit' : 'debit' %>">
                  <%= transaction.transactionType === 'credit' ? '+' : '-' %>â‚¹<%= transaction.amount.toFixed(2) %>
                </span>
              </p>
              <p><strong>Type:</strong> 
                <span class="badge <%= transaction.transactionType === 'credit' ? 'bg-success' : 'bg-danger' %>">
                  <%= transaction.transactionType %>
                </span>
              </p>
              <p><strong>Method:</strong> <%= transaction.paymentMethod %></p>
              <p><strong>Purpose:</strong> <%= transaction.purpose %></p>
              <p><strong>Date:</strong> <%= new Date(transaction.createdAt).toLocaleString() %></p>
              <p><strong>Orders:</strong> 
                <span class="orders">
                  <% if (transaction.orders && transaction.orders.length > 0) { %>
                    <% transaction.orders.forEach(order => { %>
                      <% if (order.orderDetails) { %>
                        <a href="/admin/orders/<%= order.orderDetails._id %>" class="badge bg-info">
                          <%= order.orderId %>
                        </a>
                      <% } else { %>
                        <span class="badge bg-secondary"><%= order.orderId %></span>
                      <% } %>
                    <% }); %>
                  <% } else { %>
                    N/A
                  <% } %>
                </span>
              </p>
              <div class="actions">
                <a href="/admin/transactions/<%= transaction.transactionId %>" class="btn btn-sm btn-primary">
                  <i class="fas fa-eye"></i> View
                </a>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="transaction-card text-center">
            <p>No transactions found</p>
          </div>
        <% } %>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
            </li>
            <% for(let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
            </li>
          </ul>
        </nav>
      <% } %>
    </div>
  </div>
</div>

<script>
  function resetFilters() {
    document.getElementById('filterForm').reset();
    window.location.href = '/admin/transactions';
  }

  document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const fields = [
      'transactionType', 'paymentMethod', 'purpose',
      'orderId', 'startDate', 'endDate', 'userId'
    ];
    fields.forEach(field => {
      const value = urlParams.get(field);
      if (value) {
        document.getElementById(field).value = value;
      }
    });
  });
</script>

