<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* General Styles */
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* Card Styling */
        .card-login {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            width: 100%;
            max-width: 400px;
            margin: 1rem;
        }

        .card-title {
            font-size: clamp(1.25rem, 3vw, 1.5rem);
            color: #333;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        /* Input Fields */
        .input-group {
            position: relative;
            width: 100%;
        }

        .form-control {
            border: 1px solid #ced4da;
            padding: 0.625rem;
            border-radius: 5px 0 0 5px;
            width: 100%;
            font-size: clamp(0.875rem, 2.5vw, 1rem);
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            outline: none;
        }

        .input-group .btn {
            border: 1px solid #ced4da;
            border-left: none;
            border-radius: 0 5px 5px 0;
            padding: 0 1rem;
            background-color: #fff;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .input-group .btn:hover {
            background-color: #f8f9fa;
        }

        /* Error Messages */
        .text-danger {
            font-size: clamp(0.75rem, 2vw, 0.875rem);
            margin-top: 0.25rem;
            word-wrap: break-word;
        }

        /* Button */
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 0.625rem;
            font-size: clamp(0.875rem, 2.5vw, 1rem);
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
            width: 100%;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Alert Message */
        #alertMessage {
            font-size: clamp(0.75rem, 2vw, 0.9rem);
            padding: 0.625rem;
            border-radius: 5px;
            margin-top: 0.625rem;
            text-align: center;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .card-login {
                padding: 1.5rem;
                max-width: 90%;
            }
            
            .mb-3 {
                margin-bottom: 1rem !important;
            }
            
            .mb-4 {
                margin-bottom: 1.25rem !important;
            }
        }

        @media (max-width: 480px) {
            .card-login {
                padding: 1rem;
                margin: 0.5rem;
            }
            
            .input-group .btn {
                padding: 0 0.75rem;
            }
            
            .form-control {
                padding: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <section class="content-main">
        <div class="card mx-auto card-login">
            <div class="card-body">
                <h4 class="card-title">Change Password</h4>
                <form method="post" action="/reset-password" onsubmit="return validateForm()">
                    <div class="mb-3 position-relative">
                        <div class="input-group">
                            <input class="form-control" name="newPass1" id="newPass1" placeholder="Enter new password" type="password" required>
                            <button class="btn btn-outline-secondary toggle-password" type="button" onclick="togglePassword('newPass1', this)">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div id="newPass1Error" class="text-danger"></div>
                    </div>
                    <div class="mb-3 position-relative">
                        <div class="input-group">
                            <input class="form-control" name="newPass2" id="newPass2" placeholder="Re-enter new password" type="password" required>
                            <button class="btn btn-outline-secondary toggle-password" type="button" onclick="togglePassword('newPass2', this)">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div id="newPass2Error" class="text-danger"></div>
                    </div>
                    <div class="mb-4">
                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </div>
                    <% if (locals.message && message.length > 0) { %>
                        <div id="alertMessage" class="alert alert-danger">
                            <%= message %>
                        </div>
                    <% } %>
                </form>
                <p class="text-center mt-4">Don't have an account? <a href="/signup">Sign up</a></p>
            </div>
        </div>
    </section>

    <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function validateForm() {
            let valid = true;
            const newPass1 = document.getElementById('newPass1');
            const newPass2 = document.getElementById('newPass2');
            const newPass1Error = document.getElementById('newPass1Error');
            const newPass2Error = document.getElementById('newPass2Error');

            newPass1Error.textContent = '';
            newPass2Error.textContent = '';

            if (!newPass1.value.trim()) {
                newPass1Error.textContent = 'Password cannot be empty.';
                valid = false;
            } else if (newPass1.value.length < 6) {
                newPass1Error.textContent = 'Password must be at least 6 characters long.';
                valid = false;
            }

            if (!newPass2.value.trim()) {
                newPass2Error.textContent = 'Please re-enter your password.';
                valid = false;
            } else if (newPass2.value !== newPass1.value) {
                newPass2Error.textContent = 'Passwords do not match.';
                valid = false;
            }
            
            return valid;
        }
    </script>
</body>
</html>